<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/topkeys_normal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvheading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="@dimen/pop_up_text_padding"
        android:text="HEADING"
        android:textColor="@color/dialog_text"
        android:textSize="@dimen/pop_up_heading_textsize" />

    <TextView
        android:id="@+id/tvcontent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/pop_up_text_padding"
        android:text="content"
        android:textColor="@color/dialog_text"
        android:textSize="@dimen/pop_up_element_textsize" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pop_up_text_padding"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/brate"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/pop_up_text_padding"
            android:layout_weight="1"
            android:background="@drawable/popup_background"
            android:padding="@dimen/pop_up_text_padding"
            android:text="Rate"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/pop_up_element_textsize" />

        <Button
            android:id="@+id/blater"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/pop_up_text_padding"
            android:layout_weight="1"
            android:background="@drawable/popup_background"
            android:padding="@dimen/pop_up_text_padding"
            android:text="Later"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/pop_up_element_textsize" />

        <Button
            android:id="@+id/bnothanks"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/pop_up_text_padding"
            android:layout_weight="1"
            android:background="@drawable/popup_background"
            android:padding="@dimen/pop_up_text_padding"
            android:text="Never"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/pop_up_element_textsize" />
    </LinearLayout>

</LinearLayout>